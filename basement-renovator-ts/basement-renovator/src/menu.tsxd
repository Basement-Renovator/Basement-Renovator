import * as React from 'react';
import {
    Button, Tab, Tabs,
} from '@mui/material';

function MinimizeButton() {
    return (<Button onClick={
        (window as any).electronAPI.minimize
    }>ðŸ—•</Button>);
}

function MaximizeRestoreButton() {
    const [ needsRestore, setNeedsRestore ] = React.useState(false); // TODO:

    (<Button onClick={
        needsRestore ?
            (window as any).electronAPI.restore :
            (window as any).electronAPI.maximize
    }>{needsRestore ? 'ðŸ——' : 'ðŸ—–'}</Button>);
}

function CloseButton() {
    return (<Button color='red' radius={100} onClick={
        (window as any).electronAPI.close
    }>ðŸ—™</Button>);
}

function LayerBar() {
    const [ tabs, handlers ] = useListState(["Default", "Wave2"]);

    function addTab() {
        handlers.append(`Layer${tabs.length}`);
    }

    return (<Group>
        <Tabs variant='outline'>{
            tabs.map(tab => <Tab label={tab} />)
        }</Tabs>
        <Button onClick={addTab}>+</Button>
    </Group>)
}

