<format>
<byte   type="signed"   len="1" />
<short  type="signed"   len="2" />
<int    type="signed"   len="4" />
<long   type="signed"   len="8" />

<ubyte  type="unsigned" len="1" />
<ushort type="unsigned" len="2" />
<uint   type="unsigned" len="4" />
<ulong  type="unsigned" len="8" />

<float  type="floating" len="4" />
<double type="floating" len="8" />

<string type="list">
    <value type="character" len="string" encoding='ascii' />
</string>

<list type="uint" len="list" />

<stb0>
    <stbVersion type='string' len='0'>STB0</stbVersion>
    <room type="list" len="4">
        <type type="uint" />
        <variant type="uint" />
        <difficulty type="ubyte" />
        <name type="string" len="2" />
        <weight type="float" />
        <width  type="ubyte" />
        <height type="ubyte" />
        <numDoors type="ubyte" />
        <numSpawns type="ushort" />
        <door len="numDoors">
            <x type="short" />
            <y type="short" />
            <exists type="boolean" />
        </door>
        <spawn len="numSpawns">
            <x type="short" />
            <y type="short" />
            <entity type="list" len="1">
                <type    type="ushort" />
                <variant type="ushort" />
                <subtype type="ushort" />
                <weight  type="float" />
            </entity>
        </spawn>
    </room>
</stb0>

<stb1>
    <stbVersion type='string'>STB1</stbVersion>
    <room type="list" len="4">
        <type type="uint" />
        <variant type="uint" />
        <subtype type="uint" /> <!-- only for STB1+ -->
        <difficulty type="ubyte" />
        <name type="string" len="2" />
        <weight type="float" />
        <width  type="ubyte" />
        <height type="ubyte" />
        <shape  type="ubyte" /> <!-- only for STB1+ -->
        <numDoors type="ubyte" />
        <numSpawns type="ushort" />
        <door len="numDoors">
            <x type="short" />
            <y type="short" />
            <exists type="boolean" />
        </door>
        <spawn len="numSpawns">
            <x type="short" />
            <y type="short" />
            <entity type="list" len="1">
                <type    type="ushort" />
                <variant type="ushort" />
                <subtype type="ushort" />
                <weight  type="float" />
            </entity>
        </spawn>
    </room>
</stb1>

<stb2>
    <stbVersion type='string'>STB2</stbVersion>
    <room type="list" len="4">
        <type type="uint" />
        <variant type="uint" />
        <subtype type="uint" />
        <difficulty type="ubyte" />
        <name type="string" len="2" />
        <weight type="float" />
        <width  type="ubyte" />
        <height type="ubyte" />
        <shape  type="ubyte" />
        <numDoors type="ubyte" />
        <numSpawns type="ushort" />
        <padding type="string" len="9" />
        <door len="numDoors">
            <x type="short" />
            <y type="short" />
            <exists type="boolean" />
        </door>
        <spawn len="numSpawns">
            <x type="short" />
            <y type="short" />
            <entity type="list" len="1">
                <type    type="ushort" />
                <variant type="ushort" />
                <subtype type="ushort" />
                <weight  type="float" />
            </entity>
        </spawn>
    </room>
</stb2>

</format>